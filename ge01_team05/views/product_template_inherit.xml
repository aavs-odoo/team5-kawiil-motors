<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale.product_template_action" model="ir.actions.act_window">

        <field name="context">{'search_default_filter_to_sell': 0, 'search_default_filter_to_motorcycles': 1}</field>
<!-- aqui no van espacios -->
    </record>
<!-- la convencion para nombrar los ids de las vistas que heredamon es el original + inherit_nombrecliente -->
    <record id="motorcycle_search_view" model="ir.ui.view">
        <field name="name">motorcycle.search.view</field>
        <!-- el nombre deberia ser parecido el de la vista original - por ejemplo ese seria product.template.search.view.inherit.kawill -->
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="Motorcycles" name="filter_to_motorcycles" domain="[('detailed_type', '=', 'motorcycle')]"/>
            </xpath>
        </field>

    </record>
</odoo>